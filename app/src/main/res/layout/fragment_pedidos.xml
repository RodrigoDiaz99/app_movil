<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <Spinner
        android:id="@+id/spinner_productos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:prompt="@string/select_product_prompt" />

    <LinearLayout
        android:id="@+id/layout_productos_seleccionados"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" />

    <TextView
        android:id="@+id/txt_precio_total"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/total_price_label" />

    <Button
        android:id="@+id/btn_realizar_pedido"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Realizar Pedido"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="16dp" />

</LinearLayout>
